extend /layout

block custom_head
	- if(post != undefined)
		title= post.title
	link(rel='stylesheet', type='text/css', href='/lightbox/css/lightbox.min.css')
	script(src='/lightbox/js/lightbox.min.js')

block custom_header
	include /en/_header
	#main_titile
		- if(post != undefined)
			h1= post.title
	nav#bread
		ul
			li
				a(href='/') TOP
			li
				a(href='/posts/en/rentals') RENTAL APARTMENT
			li
				- if(post != undefined)
					a= post._categories[post._categories.length - 1] + ' area'

block content
	#infomation
		block rental_article
		#thumbnail
			block thumbnail
		include /en/_contact
		- if(post != undefined)
			+contact_from(post.title, "Is available now?\n")

	#sidebar

block custom_footer
	include /en/_footer


doctype html
html

	head
		meta(charset='utf-8')
		script(type='text/javascript'). 
			(function(){
				Object.defineProperty(document,"referrer",{value:document.referrer });
				var lang = browserLanguage();
				if(lang == undefined || lang == "ja")
					location.href = location.protocol + "//" + location.host + "/ja" + location.search;
				else
					location.href = location.protocol + "//" + location.host + "/" + lang  + location.search;

				function browserLanguage() {
				  try {
				    return (navigator.browserLanguage || navigator.language || navigator.userLanguage).substr(0,2)
				  }
				  catch(e) {
				    return undefined;
				  }
				}
			})();

include resources.jade

doctype html
html

	head
		meta(charset='utf-8')
		+access_analyze()
		script(type='text/javascript'). 
			(function(){
				Object.defineProperty(document,"referrer",{value:document.referrer });

				location.href = switch_lang(location);

				function switch_lang(location)
				{
					var lang = browserLanguage();
					if(lang == undefined)
						lang = "ja"
					else if(lang != "ja")
						lang = "en"
					return location.protocol + "//" + location.host + "/" + lang  + location.pathname + location.search + location.hash;
				}

				function browserLanguage() {
				  try {
				    return (navigator.browserLanguage || navigator.language || navigator.userLanguage).substr(0,2)
				  }
				  catch(e) {
				    return undefined;
				  }
				}
			})();
	body
		div
			p This site is COWCOWHOMES.CO.LTD. Which language do you prefer?
			ul#lang_switch
				li
					a(href='/ja') 日本語
				li
					a(href='/en') English

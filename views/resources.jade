mixin output_bread_list(post, lang)
	ul
		- for(var i = 0; i < post._categories.length; i++)
			- if(i == 0)
				li
					a(href='/') TOP
			- else if(i == 1 || post._categories[i] == "pages")	continue;
			- else if(post != undefined)
				- var url = "/" + post._categories.slice(0,i + 1).join('/')
				- var area_label= data.resources.area[lang][ post._categories[i] ]
				- var nav_label= data.resources.allow_jump_category[lang][ post._categories[i] ]
				- if( typeof(nav_label) == "undefined")
					li= area_label
				- else
					li
						a(href="#{url}")= nav_label


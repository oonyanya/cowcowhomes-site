extend _page_base

block custom_header
	include _header
	#main_titile
		picture
			source(media="(max-width: 768px)" srcset=`${res.company_info.mobile_image_path}`)
			img(src=`${res.company_info.image_path}`)

block content
		#infomation
			| !{page.content}
			#topics
				each item in get_pages()
					#summary
						img(src=`${item.thumbnail}`)
						p
							a(href=`/${item.path}`) #{item.title} #{item.summary}
			#prerelease
				h2 #{res.index.prerelease_title}
				table
					each item in res.index.prerelease_list
						tr
							td #{item.date}
							td #{item.text}
		#sidebar
			#fb-root
			script(async='').
				(function(d, s, id) {
				var js, fjs = d.getElementsByTagName(s)[0];
				if (d.getElementById(id)) return;
				js = d.createElement(s); js.id = id;
				js.async = true;
				js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&version=v2.10&appId=1757936567837729";
				fjs.parentNode.insertBefore(js, fjs);
				}(document, 'script', 'facebook-jssdk'));
			.fb-page(data-href='https://www.facebook.com/有限会社カウカウホームズ-905600372815879/', data-tabs='timeline', data-small-header='true', data-adapt-container-width='true', data-hide-cover='true', data-show-facepile='false')
				blockquote.fb-xfbml-parse-ignore(cite='https://www.facebook.com/有限会社カウカウホームズ-905600372815879/')
					a(href='https://www.facebook.com/有限会社カウカウホームズ-905600372815879/') 有限会社カウカウホームズ

block custom_footer
	include _footer
